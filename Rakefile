# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/tg4rb'

Hoe.new('tg4rb', Tg4rb::VERSION) do |p|
  p.rubyforge_name = 'firewatir-gen'
  p.author = 'Helder Ribeiro'
  p.email = 'helder@gmail.com'
  p.summary = 'A recorder for FireWatir'
  p.description = p.paragraphs_of('README.txt', 2..5).join("\n\n")
  p.url = p.paragraphs_of('README.txt', 0).first.split(/\n/)[1..-1]
  p.changes = p.paragraphs_of('History.txt', 0..1).join("\n\n")
end

# vim: filetype=ruby :
